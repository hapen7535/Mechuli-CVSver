<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/item_image_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ratingimgsample"
        />

    <TextView
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CU편의점"
        android:fontFamily="@font/notosanskrmedium"
        app:layout_constraintStart_toEndOf="@id/item_image_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_brand_name_tv"
        android:textSize="14sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삼립)노티드연유소라빵"
        android:fontFamily="@font/notosanskrbold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/item_brand_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_name_tv"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>