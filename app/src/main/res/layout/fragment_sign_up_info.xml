<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/next_btn"
        android:id="@+id/srcollinput_layout"
        android:layout_marginTop="30dp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디를 입력해주세요"
                android:fontFamily="@font/notosanskrbold"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/inputid_tv"
                />

            <EditText
                android:id="@+id/inputid_et"
                android:layout_width="317dp"
                android:layout_height="60dp"
                android:background="@drawable/inputimg"
                app:layout_constraintTop_toBottomOf="@id/inputid_tv"
                app:layout_constraintStart_toStartOf="@id/inputid_tv"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrbold"
                app:layout_constraintTop_toBottomOf="@id/inputid_et"
                android:text="중복확인"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/inputid_et"
                android:id="@+id/duplicateCheck_tv"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호를 입력해주세요"
                android:fontFamily="@font/notosanskrbold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/duplicateCheck_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/inputpw_tv"
                />

            <EditText
                android:id="@+id/inputpw_et"
                android:layout_width="317dp"
                android:layout_height="60dp"
                android:background="@drawable/inputimg"
                app:layout_constraintTop_toBottomOf="@id/inputpw_tv"
                app:layout_constraintStart_toStartOf="@id/inputpw_tv"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호를 다시 입력해주세요"
                android:fontFamily="@font/notosanskrbold"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/inputpw_et"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/inputpw2_tv"
                />

            <EditText
                android:id="@+id/inputpw2_et"
                android:layout_width="317dp"
                android:layout_height="60dp"
                android:background="@drawable/inputimg"
                app:layout_constraintTop_toBottomOf="@id/inputpw2_tv"
                app:layout_constraintStart_toStartOf="@id/inputpw2_tv"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임을 입력해주세요"
                android:fontFamily="@font/notosanskrbold"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/inputpw2_et"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/inputnickname_tv"
                />

            <EditText
                android:id="@+id/inputnickname_et"
                android:layout_width="317dp"
                android:layout_height="60dp"
                android:background="@drawable/inputimg"
                app:layout_constraintTop_toBottomOf="@+id/inputnickname_tv"
                app:layout_constraintStart_toStartOf="@+id/inputnickname_tv"
                android:layout_marginTop="5dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:layout_width="317dp"
        android:layout_height="60dp"
        android:background="@drawable/subbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/srcollinput_layout"
        android:text="다음"
        android:fontFamily="@font/notosanskrbold"
        android:textSize="16sp"
        android:id="@+id/next_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
