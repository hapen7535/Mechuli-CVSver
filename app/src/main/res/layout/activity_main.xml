<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:layout_width="262dp"
            android:layout_height="281dp"
            android:src="@drawable/mainicon"
            android:id="@+id/main_icon_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_marginTop="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메추리"
            android:textSize="61sp"
            android:fontFamily="@font/gugi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_icon_iv"
            android:textColor="@color/text_main_color"
            android:id="@+id/title_tv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편의점 음식 메뉴 추리기"
            android:fontFamily="@font/notosanskrbold"
            android:textSize="16sp"
            android:id="@+id/subtitle_tv"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            app:layout_constraintStart_toStartOf="@id/title_tv"
            app:layout_constraintEnd_toEndOf="@id/title_tv"
            android:textColor="@color/text_main_color"
            />


        <Button
            android:layout_width="317dp"
            android:layout_height="59dp"
            android:background="@drawable/mainbtn"
            android:id="@+id/signIn_btn"
            app:layout_constraintTop_toBottomOf="@id/subtitle_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:text="로그인"
            android:textColor="@color/text_black_color"
            android:textSize="20sp"
            android:fontFamily="@font/notosanskrbold"
            />

        <Button
            android:layout_width="317dp"
            android:layout_height="59dp"
            android:background="@drawable/subbtn"
            android:id="@+id/signUp_btn"
            app:layout_constraintTop_toBottomOf="@id/signIn_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:text="회원가입"
            android:textColor="@color/text_black_color"
            android:textSize="20sp"
            android:fontFamily="@font/notosanskrbold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>